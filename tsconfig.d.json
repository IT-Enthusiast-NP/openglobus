{
  "include" : [
    "./src/**/*"
  ],
  "exclude" : [
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "out-tsc/types",
    "declarationMap": true,
    "target": "es2021",
    "moduleResolution": "nodenext",
    "module": "NodeNext"
  }
}
